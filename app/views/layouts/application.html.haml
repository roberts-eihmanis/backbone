%html
  %head
    %title Inventory
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    - if user_signed_in?
      #wrapper
        #sidebar-wrapper
          %ul.sidebar-nav
            %li.sidebar-brand
              %a{:href => root_path} Home
            %li
              %a{:href => "/#tasks"} Tasks
            %li
              %a{:href => "/#workers"} Workers
            %li
              %a{:href => "/admin/users"} Admin Panel
            %li
              %a{:href => root_path } Reports
            %li
              = link_to "Sign out", destroy_user_session_path, :method => :delete
        #page-content-wrapper
          .container-fluid
            .row
              = yield
              %p.notice= notice if notice
              %p.alert= alert if alert
    - else
      = yield
