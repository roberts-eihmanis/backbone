%a.btn.btn-primary.btn-lg{ :href => new_user_path, role: "button" }= "Jauns Lietotājs"
%h1= "Lietotāji"
.content_container
  %table.table.table-hover.table-striped
    %thead.table_head
      %tr
        %th= "#"
        %th= "Vārds"
        %th= "Uzvārds"
        %th= "Epasts"
        %th= "Loma"
        %th= "Telefona Nummurs"
    %tbody.workers
      - @users.each do |user|
        %tr{ onclick: "window.location.href = '/admin/users/#{user.id}'", style: "cursor: pointer" }
          %td= user.id
          %td= user.first_name
          %td= user.last_name
          %td= user.email
          - if user.role == "admin"
            %td= "Administrators"
          - elsif user.role == "user"
            %td= "Lietotājs"
          %td= user.phone_number

